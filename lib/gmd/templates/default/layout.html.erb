<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
<%= Gmd.layout_meta_tags %>
<script type="text/javascript"><%= File.read(File.dirname(__FILE__) + "/../common/highlight_js/highlight.pack.js") %></script>
<style><%= File.read(File.dirname(__FILE__) + "/../common/highlight_js/github.css") %></style>
<style>
/*
Some simple Github-like styles.
*/
body{
  font-family: helvetica, arial, freesans, clean, sans-serif;
  color: #333;
  background-color: #fff;
  border: none;
  line-height: 1.5;
  margin: 2em 3em;
  text-align:left;
}
pre{
  background-color: #eee;
  padding: 10px;
  -webkit-border-radius: 5px;
  -moz-border-radius: 5px;
  border-radius: 5px;
  overflow: auto;
}
code{
  background-color: #eee;
  padding: 1px 3px;
  -webkit-border-radius: 2px;
  -moz-border-radius: 2px;
  border-radius: 2px;
}
li p{
  margin: 0.3em;
}
ul li{
  list-style-type: disc;
}
a:link, a:visited{
  color: #33e;
  text-decoration: none;
}
a:hover{
  color: #00f;
  text-shadow:1px 1px 2px #ccf;
  text-decoration:underline;
}
h1{
  color: #999;
  font-weight: bold;
}
h2{
  border-bottom: 1px dotted #aaa;
  margin-bottom: 1em;
  color: #333;
}
h3{
  color: #666;
}
.shadow{
  -webkit-box-shadow:0 5px 15px #000;
  -moz-box-shadow:0 5px 15px #000;
  box-shadow:0 5px 15px #000;
}
pre code {
  background: #f8f8ff;
  color: #000;
}
</style>
<script type="text/javascript">
hljs.initHighlightingOnLoad();
</script>
</head>
<body>
<%= yield %>
</body>
</html>
